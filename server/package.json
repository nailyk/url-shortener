{
  "name": "url-shortener-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "concurrently \"tsc --noEmit --watch\" \"cross-env USE_LOCAL_ENV=true tsx --watch src/app.ts\"",
    "start": "node build/src/app.js",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "ioredis": "^5.3.2",
    "ms": "^2.1.3",
    "pg": "^8.16.3",
    "sqids": "^0.3.0",
    "@url-shortener/shared-types": "*"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/ioredis": "^4.28.10",
    "@types/ms": "^2.1.0",
    "@types/node": "^24.0.8",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "prettier": "^3.6.2",
    "supertest": "^7.1.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "license": "MIT",
  "author": "nailyk"
}
